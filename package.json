{
  "name": "tetron",
  "version": "1.2.0",
  "description": "Tetris as an electron application!",
  "author": "Rob Gonnella",
  "main": "build/tetronMain.js",
  "scripts": {
    "build": "rimraf build && mkdir -p build && cp -R ./static/* build/ && webpack",
    "build:debug": "rimraf build && mkdir -p build && cp -R ./static/* build/ && NODE_ENV=development webpack",
    "start": "electron build/tetronMain.js",
    "pack": "electron-builder"
  },
  "build": {
    "appId": "com.quantum-lexicon.tetron",
    "productName": "Tetron",
    "directories": {
      "output": "package",
      "buildResources": "static/resources"
    },
    "mac": {
      "category": "public.app-category.games",
      "icon": "tetris-icon2.icns",
      "target": ["pkg"]
    },
    "win": {
      "target": ["msi"],
      "icon": "static/resources/"
    }
  },
  "devDependencies": {
    "@types/node": "^10.11.4",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.8",
    "electron": "^3.0.3",
    "electron-builder": "^20.28.4",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.2.1",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  }
}
